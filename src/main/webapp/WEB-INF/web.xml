<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<!-- 应用的名称 -->
	<display-name>zhoujiaweiBlog</display-name>
	<!-- 应用描述 -->
	<description>博客服务系统</description>

	<!-- 用来定义首页文件名称 -->
	<welcome-file-list>
		<welcome-file>/index.jsp</welcome-file>
	</welcome-file-list>


	<!-- 元素用来设定web应用的环境参数(context) -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:spring/applicationContext.xml</param-value>
	</context-param>

	<!-- Spring配置 Listener 监听 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<!-- 初始化系统参数 -->
	<listener>
		<listener-class>org.java.base.system.initialize.InitComponent</listener-class>
	</listener>
	
	
	<!-- 获得servletAPI start 
	两种不同初始化方式 需要用到哪一个则注释另一个-->
	<listener>
		<listener-class>org.java.base.system.support.ServletAPI</listener-class>
	</listener>
	<!-- 获得servletAPI end-->
	
	<!-- 单点登录过滤器 -->
